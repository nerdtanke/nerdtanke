      #header
        %h1= link 'Die Nerdtanke', '/'
        %h4 Bytes und Bier â€“ Einmal vollmachen
        = link img('die-nerdtanke-75x75.png', :alt => '', :id => 'logo'), '/'
      #torso
        #sidebar
          #about
            %p
              Wir sind 3 Nerds und sprechen in Podcasts ueber Themen, die Nerds wie euch interessieren.
          #connect
            #buttons
              .button
                %a.email{ :href => 'mailto:tankwart@nerdtanke.de' } E-Mail
              .button
                %a.rss{ :href => 'http://feeds.feedburner.com/DieNerdtanke' } RSS
              .button
                %a.itunes{ :href => 'http://itunes.apple.com/de/podcast/die-nerdtanke/id434211329', :target => '_blank' } iTunes
              .button
                %a.facebook{ :href => 'https://www.facebook.com/nerdtanke', :target => '_blank' } Facebook
              .button
                %a.google_plus{ :href => 'https://plus.google.com/107195162516862227780', :target => '_blank' } <span class="blue">G</span><span class="red">o</span><span class="yellow">o</span><span class="blue">g</span><span class="green">l</span><span class="red">e</span><span class="plus">+</span>
              .button
                %a.twitter{ :href => 'http://twitter.com/nerdtanke', :target => '_blank' } Twitter
          #hosts
            = host 'arne'
            = host 'henning'
            = host 'thomas'
            .clear
        #main
          = yield
          #footer
            - unless @no_footer
              Kontakt:
              = link 'tankwart@nerdtanke.de', 'mailto:tankwart@nerdtanke.de'
              .imprint
                = link 'Impressum', 'imprint.html', :rel => 'nofollow'
