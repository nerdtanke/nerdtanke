:ruby
  current = locals[:except]
  podcasts = Podcast.all(data).tap do |all|
    all.delete current if current
  end

#archive
  %h2
    - if current
      Weitere Folgen
    - else
      Alle Folgen
  %ul
    - podcasts.each do |podcast|
      %li
        = link_to h(podcast.long_title), podcast.page
