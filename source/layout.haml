%html{ :lang => 'de', :'xml:lang' => 'de', :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ :content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }
    %meta{ :content => 'de', 'http-equiv' => 'Content-Language' }
    %title= page_title
    
    %link{ :type => 'application/rss+xml', :href => 'http://nerdtanke.de/rss.xml', :rel => 'alternate', :title => 'Die Nerdtanke als RSS-Feed' }
    %link{ :type => 'image/x-icon', :rel => 'icon', :href => 'favicon.ico' }
    %link{ :type => 'image/x-icon', :rel => 'shortcut icon', :href => 'favicon.ico' }
    
    = stylesheet_link_tag 'screen', :media => 'screen'
    = stylesheet_link_tag 'gameboy', :media => 'screen and (max-width: 990px)'
    = javascript_include_tag 'jquery-1.6.1.min'
    = partial 'head/player'
  %body
    #page
      #header
        %h1= link_to 'Die Nerdtanke', '/'
        %h4 Bytes und Bier â€“ Einmal vollmachen
        = link_to image_tag('die-nerdtanke-75x75.png', :alt => '', :id => 'logo'), '/'
      #torso
        #sidebar
          #about
            %p
              Wir sind 3 Nerds und sprechen in Podcasts ueber Themen, die Nerds wie euch interessieren.
          = partial 'social'
          = partial 'hosts'
        #main
          = seven_bit_umlauts(yield)
          = partial 'footer'
